<section class="content-wrap">
    <section class="youplay-banner youplay-banner-parallax banner-top xxsmall">
        <div class="image" style="background-image: url('/images/civ6-bg.jpg')">
        </div>

        <div class="info">
            <div>
                <div class="container"></div>
            </div>
        </div>
    </section>

    <div class="container youplay-news">

        <!-- map -->
        <div class="map">
            {{#local}}
            <div class="btn-group social-list social-likes" data-counters="no">
                {{#each .}}
                <span class="btn btn-default" style="width: 60px; height: 50px; line-height: 0.5;">
                    <span style="font-size: 8px;">
                        {{#if city}}[{{city.size}}] {{city.name}}<br/>{{/if}}{{unit.type}}<br/>{{terrain}}
                    </span>
                </span>
                {{/each}}
            </div>
            {{/local}}
        </div>

        <div class="col-md-9">
            <div class="news-one">
                <div class="row vertical-gutter">
                    <!-- Cities -->
                    {{#cities}}
                    <div class="col-md-4">
                        <a href="#" class="angled-img">
                            <div class="img">
                                <img src="/images/civ6-bg.jpg" alt="">
                            </div>
                            <div class="youplay-hexagon-rating youplay-hexagon-rating-small youplay-hexagon-rating-ready" data-max="10" data-size="50" title="9.1 out of 10" style="width: 50px; height: 50px;"><canvas width="50" height="50"></canvas><span>10</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="clearfix">
                            <h3 class="h2 pull-left m-0"><a href="#">[{{size}}] {{name}}</a></h3>
                            <span class="date pull-right">
                                <i class="fa fa-calendar"></i> 5 turns to growth<br/>
                            </span>
                        </div>
                        <div class="tags">
                            <i class="fa fa-tags"></i>  <a href="#">3 culture</a>, <a href="#">4 food</a>, <a href="#">2 faith</a>, <a href="#">5 gold</a>
                            <span class="date pull-right">
                                <a href="#">Woods</a>, <a href="#">Plains</a>, <a href="#">Grasslands</a>
                            </span>
                        </div>
                        <div class="description">
                            <p>
                                Production: <a href="#">Archer</a>
                            </p>
                            <p>
                                Districts: {{#each districts}}<a href="#">{{type}}</a>{{/each}}
                            </p>
                        </div>
                    </div>
                    {{/cities}}
                    <!-- /Cities -->

                    <!-- Units -->
                    {{#units}}
                    <div class="col-md-4">
                        <a href="#" class="angled-img">
                            <div class="img">
                                <img src="/images/civ6-bg.jpg" alt="">
                            </div>
                            <div class="youplay-hexagon-rating youplay-hexagon-rating-small youplay-hexagon-rating-ready" data-max="10" data-size="50" title="9.1 out of 10" style="width: 50px; height: 50px;"><canvas width="50" height="50"></canvas><span>10</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="clearfix">
                            <h3 class="h2 pull-left m-0"><a href="#">[{{data.level}}] {{data.type}}</a></h3>
                            <span class="date pull-right">
                                2 movements<br/>
                            </span>
                        </div>
                        <div class="tags">
                            <i class="fa fa-tags"></i>  <a href="#">[support]</a> <a href="#">7 attack</a>, <a href="#">4 defence</a>
                            <span class="date pull-right">
                                100 health<br/>30 xp
                            </span>
                        </div>
                        <div class="description">
                            <p>
                                Moves: {{#movement}}<a href="/unit/move/{{../data.id}}/{{direction}}">{{direction}}</a>, {{/movement}}
                            </p>
                            <p>
                                {{#ifCond data.type "settler"}}
                                Actions: <a href="/unit/found/{{../data.id}}">Found</a>
                                {{/ifCond}}
                            </p>
                        </div>
                    </div>
                    {{/units}}
                    <!-- /Units -->
                </div>
            </div>
        </div>
        <!-- Right Side -->
        <div class="col-md-3">
            <!-- Research -->
            <div class="side-block">
                <h4 class="block-title">Under Research</h4>
                <ul class="block-content">
                    {{#techs.progress}}
                        <li><a href="/tech/start/{{name}}">{{name}}</a> {{cost}} science</li>
                    {{/techs.progress}}
                </ul>
                <h4 class="block-title">Research</h4>
                <ul class="block-content">
                    {{#available}}
                    <li style="margin-bottom: 8px;">
                        <a href="/tech/start/{{name}}">{{name}}</a>
                        {{cost}} science
                        {{#if required}}<span style="font-size: 8px;">(Requires: {{#required}}{{.}}{{/required}})</span>{{/if}}
                        {{#if required}}<span style="font-size: 8px;">{{#unlocks}}<a href="#">{{.}}</a>{{/unlocks}}</span>{{/if}}
                    </li>
                    {{/available}}
                </ul>
            </div>
            <!-- /Research -->

            <div class="side-block">
                <h4 class="block-title">Game News</h4>
                <div class="block-content p-0">
                    {{#news}}
                    <!-- Single News Block -->
                    <div class="row youplay-side-news">
                        <div class="col-xs-3 col-md-4">
                            <a href="#" class="angled-img">
                                <div class="img">
                                    <!--<img src="assets/images/game-bloodborne-500x375.jpg" alt="">-->
                                </div>
                            </a>
                        </div>
                        <div class="col-xs-9 col-md-8">
                            <h4 class="ellipsis"><a href="#">Archer was killed</a></h4>
                            <span class="date"><i class="fa fa-calendar"></i> 1 turn ago</span>
                        </div>
                    </div>
                    <!-- /Single News Block -->
                    {{/news}}
                </div>
            </div>

        </div>
        <!-- /Right Side -->

    </div>

</section>