<section class="content-wrap">

    <!-- Banner -->
    <section class="youplay-banner youplay-banner-parallax banner-top xsmall">
        <div class="image" style="background-image: url('/images/civ6-bg.jpg')">
        </div>

        <div class="info">
            <div>
                <div class="container">
                    <h1>Game</h1>
                    <em>{{gameId}}</em>
                </div>
            </div>
        </div>
    </section>
    <!-- /Banner -->

    <div class="container youplay-search">
        <div class="row">
            <div class="col-md-6">
                <h2>Available Civs</h2>
                {{#data.civs}}
                <a href="/game/pick/{{../gameId}}/{{name}}" class="angled-bg">

                    <div class="row">
                        <div class="col-md-3 col-xs-4">
                            <div class="angled-img">
                                <div class="img">
                                    <img src="/images/civ6-small.jpg" alt="">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9 col-xs-8">
                            <div class="row">
                                <div class="col-xs-6 col-md-3">
                                    <h4>{{name}}</h4>
                                    <div class="rating">
                                        {{leader}}
                                    </div>
                                </div>
                                <div class="col-xs-6 col-md-9 align-right">
                                    <div class="date">
                                        {{flavor}}<br/><br/>
                                        <i class="fa fa-tags"></i> {{unique}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                {{/data.civs}}
            </div>
            <div class="col-md-6">
                <h2>Players</h2>
                <a href="#" class="angled-bg">
                    {{#data.status.players}}
                    <div class="row">
                        <div class="col-md-3 col-xs-4">
                            <div class="angled-img">
                                <div class="img">
                                    <img src="/images/civ6-small.jpg" alt="">
                                    {{#if ready}}<div class="badge show bg-green">Ready</div>{{else}}<div class="badge show-half bg-default">Not Ready</div>{{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9 col-xs-8">
                            <div class="row">
                                <div class="col-xs-6 col-md-9">
                                    <h4>{{civ}}</h4>
                                    <div class="tags">
                                        {{email}}
                                    </div>
                                </div>
                                <div class="col-xs-6 col-md-3 align-right">
                                    <div class="date">
                                        <!--5 seconds ago-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/data.status.players}}
                </a>
            </div>
        </div>
    </div>

    <div class="container youplay-search">
        <div class="row">
            <!-- TODO: remove when you are ready -->
            <a class="btn btn-lg" href="/game/join/{{gameId}}">Join</a>
            <a class="btn btn-lg" href="/game/ready/{{gameId}}">Ready</a>
            <a class="btn btn-lg" href="/game/start/{{gameId}}">Start</a>
        </div>
    </div>

</section>