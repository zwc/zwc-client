<!-- Single News Block -->
<div class="news-one">
    <div class="row vertical-gutter">
        <div class="col-md-4">
            <a href="blog-post-1.html" class="angled-img">
                <div class="img">
                    <img src="/images/macchu.jpg" alt="">
                </div>
                <div class="youplay-hexagon-rating youplay-hexagon-rating-small" data-max="10" data-size="50" title="9.1 out of 10"><span>0.1</span>
                </div>
            </a>
        </div>
        <div class="col-md-8">
            <div class="clearfix">
                <h3 class="h2 pull-left m-0"><a href="#">{{caption}}</a></h3>
                <span class="date pull-right"><i class="fa fa-calendar"></i> {{date}}</span>
            </div>
            <div class="tags">
                <i class="fa fa-tags"></i>  <a href="#">{{tag}}</a>
            </div>
            <div class="description">
                <p>
                    {{text}}
                </p>
            </div>
        </div>
    </div>
</div>
<!-- /Single News Block -->